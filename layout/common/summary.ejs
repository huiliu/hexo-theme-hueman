<div class="bg-white rounded shadow-md overflow-hidden">
  <div class="article-summary-inner">
    <% if (theme.customize.thumbnail===true) { %>
      <%- partial('common/thumbnail', { counter: true }) %>
        <% } %>
          <div class="flex justify-between m-2">
            <div class="category">
              <%- list_categories(post.categories, { depth:2, style: 'none' , show_count: false,
                class: 'rounded px-1 mr-2 bg-gray-400 article-category' ,
                separator: '' , }) %>
            </div>
            <div class="date"><time datetime="<%= date_xml(post.date) %>" itemprop="datePublished">
                <%= date(post.date) %>
              </time></div>
          </div>
          <%- partial('post/title', { class_name: 'text-2xl m-2' , linkable: true }) %>
            <p class="text-gray-500 m-2 line-clamp-3">
              <%- excerpt(post) %>
            </p>
  </div>
</div>